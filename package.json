{
  "name": "vision-ui",
  "version": "1.0.0",
  "description": "A collection of enterprise-grade, dependency-free modules for modern web projects.",
  "author": "David Osipov <personal@david-osipov.vision>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.mjs,.ts,.d.ts",
    "lint:fix": "eslint . --ext .js,.mjs,.ts,.d.ts --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "quality": "npm run format:check && npm run lint && npm run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-unsanitized": "^4.1.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
